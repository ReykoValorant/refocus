{
  "manifest_version": 1,
  "type": "WebApp",
  "meta": {
  "name": "Refocus",
  "author": "Reyko",
  "version": "0.4.0",
  "minimum-overwolf-version": "0.240.0",
  "description": "Refocus - Round-by-round focus coaching overlay for VALORANT. Refocus. Reset. Dominate.",
  "icon": "Icon.png",
  "dock_button_title": "Refocus",
  "launcher_icon": "launcher_icon.ico",
  "window_icon": "launcher_icon.ico"
  },
  "permissions": [
    "WindowManagement",
    "GameInfo",
    "GameEvents",
    "Web"
  ],
  "data": {
    "start_window": "background",
    "game_targeting": {
      "type": "dedicated",
      "game_ids": [21640]
    },
    "game_events": [21640],

    "launch_events": [
      {
        "event": "GameLaunch",
        "game_ids": [21640]
      }
    ],

    "windows": {
      "background": {
        "file": "background.html",
        "is_background_page": true
      },
      "launcher": {
        "file": "launcher.html",
        "desktop_only": true,
        "in_game_only": false,
        "show_in_taskbar": true,
        "transparent": false,
        "resizable": true,
        "size": { "width": 900, "height": 780 }
      },
      "in_game": {
        "file": "in_game.html",
        "desktop_only": false,
        "in_game_only": true,
        "show_in_taskbar": false,
        "transparent": true,
        "resizable": false,
        "clickthrough": true,
        "ignore_keyboard_events": true,
        "restrict_to_game_bounds": true,
        "size": { "width": 420, "height": 160 }
      }
    }
  }
}